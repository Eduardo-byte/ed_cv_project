# =============================================================================
# CV FRONTEND - Environment Variables Example  
# =============================================================================
# This is for your React frontend (ed_cv_project)
# Copy this to .env in your frontend root and customize
# These are PUBLIC variables (prefixed with VITE_) - no secrets here!

# =============================================================================
# APPLICATION INFO
# =============================================================================
VITE_APP_NAME="Eduardo Brito CV"
VITE_APP_VERSION="2.0.0"
VITE_APP_DESCRIPTION="Professional CV Website with Microservices Architecture"

# =============================================================================
# API CONFIGURATION - Points to your microservice
# =============================================================================
# Development: Your local microservice
VITE_API_BASE_URL_DEV="http://localhost:3001/api"

# Production: Your deployed microservice (change to your domain)
VITE_API_BASE_URL_PROD="https://api.yourdomain.com"

# API Version and timeout
VITE_API_VERSION="v1"
VITE_API_TIMEOUT=10000

# =============================================================================
# API AUTHENTICATION
# =============================================================================
# API Key for microservice communication (this becomes public!)
# Make sure this matches API_KEY in your microservice .env
VITE_API_KEY="sk-cv-frontend-2024-public-key-xyz789abc123def456"

# JWT Token Storage Keys (just the localStorage/sessionStorage key names)
VITE_AUTH_TOKEN_KEY="cv_api_token"
VITE_AUTH_SESSION_KEY="cv_api_session"

# =============================================================================
# CONTACT FORM CONFIGURATION
# =============================================================================
# Email placeholder in contact form
VITE_CONTACT_PLACEHOLDER_EMAIL="your.email@example.com"

# Message length validation
VITE_CONTACT_MAX_MESSAGE_LENGTH=5000
VITE_CONTACT_MIN_MESSAGE_LENGTH=10

# Success/error messages
VITE_CONTACT_SUCCESS_MESSAGE="Thanks! I'll get back to you soon."
VITE_CONTACT_ERROR_MESSAGE="Oops! Something went wrong. Please try again."

# =============================================================================
# SPAM DETECTION SETTINGS
# =============================================================================
# Maximum number of links allowed in contact form
VITE_SPAM_MAX_LINKS=3

# Maximum length of all-caps text before flagging as spam
VITE_SPAM_MAX_CAPS_LENGTH=50

# Keywords that trigger spam detection (comma-separated)
VITE_SPAM_KEYWORDS="buy now,click here,limited time,act fast,guaranteed"

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Pagination settings
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Theme settings
VITE_DEFAULT_THEME="light"
VITE_ENABLE_DARK_MODE=true

# Animation settings
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION=300

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug console logs
VITE_DEBUG_MODE=true

# Log level for client-side logging
VITE_LOG_LEVEL="info"

# Show performance metrics in console
VITE_SHOW_PERFORMANCE_METRICS=true

# =============================================================================
# SEO & ANALYTICS
# =============================================================================
# Your domain (used for canonical URLs, sitemap, etc.)
VITE_DOMAIN="yourdomain.com"

# Social media links
VITE_SOCIAL_LINKEDIN="https://linkedin.com/in/your-profile"
VITE_SOCIAL_GITHUB="https://github.com/your-username"
VITE_SOCIAL_TWITTER="https://twitter.com/your-handle"
VITE_SOCIAL_EMAIL="hello@yourdomain.com"

# Google Analytics (if using client-side tracking)
# VITE_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable certain features
VITE_ENABLE_CONTACT_FORM=true
VITE_ENABLE_PROJECT_FILTERS=true
VITE_ENABLE_DOWNLOAD_CV=true
VITE_ENABLE_TESTIMONIALS=false

# =============================================================================
# CONTENT CONFIGURATION
# =============================================================================
# CV Download
VITE_CV_FILENAME="Eduardo_Brito_CV.pdf"
VITE_CV_DOWNLOAD_TEXT="Download My CV"

# Hero section
VITE_HERO_TITLE="Eduardo Brito"
VITE_HERO_SUBTITLE="Full Stack Developer"
VITE_HERO_CTA="Get In Touch"

# =============================================================================
# ERROR HANDLING
# =============================================================================
# Default error messages
VITE_ERROR_GENERIC="Something went wrong. Please try again."
VITE_ERROR_NETWORK="Network error. Check your connection."
VITE_ERROR_UNAUTHORIZED="Authentication required."
VITE_ERROR_FORBIDDEN="Access denied."
VITE_ERROR_NOT_FOUND="Requested resource not found."

# =============================================================================
# EXAMPLE USAGE NOTES:
# =============================================================================
# 1. Copy this file to .env in your frontend root (ed_cv_project)
# 2. Customize the values for your brand/domain
# 3. Make sure VITE_API_KEY matches the API_KEY in your microservice
# 4. Update URLs to point to your deployed microservice
# 5. These variables are PUBLIC - they get embedded in your built JS!
# 6. Never put secrets/passwords here - they'll be visible to users!
